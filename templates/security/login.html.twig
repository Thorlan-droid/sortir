{% extends 'base.html.twig' %}

{% block title %}Connectes-toi !{% endblock %}

{% block body %}
<form class="needs-validation" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Tu es connect√© en temps que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="largeurSeConnecter">

        <h1 class="h3 mb-5 mt-5 font-weight-normal">Identifiez-vous</h1>

        <div class="row g-3">
            <div class="col-sm-6">
                <label class="form-label" for="inputUsername">Pseudo</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
            </div>
            <div class="col-sm-6">
                <label class="form-label" for="inputPassword">Mot De Passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        </div>
        <div class="row g-3">
            <div class="col-auto">
                <div class="mt-2 me-5">
                    <button class="btn btn-primary btn-lg" type="submit"> Connexion </button>
                </div>
            </div>
            <div class="col">
                <div class="mt-2 ">
                    <label class="form-label ">
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}
