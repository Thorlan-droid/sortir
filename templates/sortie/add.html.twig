{% extends 'base.html.twig' %}

{% block title %}
    Créer une sortie
{% endblock %}

{% block body %}
    <h2 class="h2perso mb-5">Créer une sortie</h2>

    <div class="creerSortie">
        {{ form_start(sortieForm) }}
        {{ form_label(sortieForm.nom) }}
        {{ form_widget(sortieForm.nom) }}
        {{ form_errors(sortieForm.nom) }}
    </div>

    {{ form_label(sortieForm.ville) }}
    {{ form_widget(sortieForm.ville) }}
    {{ form_errors(sortieForm.ville) }}
    <br>
    {{ form_label(sortieForm.lieu) }}
    {{ form_widget(sortieForm.lieu) }}
    {{ form_errors(sortieForm.lieu) }}
    <a class="link_button" href="{{ path('lieu_add') }}">Ajouter</a>

    {{ form_rest(sortieForm) }}
    <button class="btn btn-success">Enregistrer</button>
    <a href="{{ path('sortie_list') }}"><button>Annuler</button></a>
    {{ form_end(sortieForm) }}

{% endblock %}

