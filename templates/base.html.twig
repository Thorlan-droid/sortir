</head>
<body>
    <div class="container">
        <header>
            {% include 'menu/nav.html.twig' %}
        </header>
        <main>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block body %} {% endblock %}
        </main>
        <footer>
        </footer>
    </div>
</body>
</html>
